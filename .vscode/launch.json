{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-v",
                "-s",
                "tests",
                "-p",
                "test*.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Current Test File",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "${fileBasenameNoExtension}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "queuepipeio",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}